extends layout.pug

mixin job(title, team, location, link)
  li.opening-job.job.column.wide-1of2.medium-1of2
    a.link--block.details(href=link)
      h3.details-title.job-title.link--block-target= title
      ul.details-desc.desc-items.list--dotted
        li.desc-item= team
        li.desc-item= location

