head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1')

  link(rel='shortcut icon' href='assets/images/favicon.png' type='image/png')
  link(rel='icon' href='assets/images/favicon.png' type='image/png')
  link(rel='apple-touch-icon' href='assets/images/apple-touch.png')
  link(rel='apple-touch-icon' sizes='72x72' href='assets/images/apple-touch-72.png')
  link(rel='apple-touch-icon' sizes='114x114' href='assets/images/apple-touch-114.png')
  link(rel='apple-touch-icon' sizes='144x144' href='assets/images/apple-touch-144.png')
  
  link(rel='author' href='humans.txt')
  link(rel='stylesheet' type='text/css' href='bundle.css')

  meta(property='og:locale' content='en_GB')
  meta(property='og:type' content='article')
  meta(property='og:title' content='buildit@wiprodigital')
  meta(property='og:description' content='The future belongs to those who make')
  meta(property='og:url' content='https://buildit.digital/')
  meta(property='og:site_name' content='buildit_')
  meta(property='og:image' content='https://buildit.digital/assets/images/buildit-logo-white.png')
  meta(property='article:published_time' content='Fri March 17, 2017')

  title= title

  style(type='text/css').
    .hidden.menu {
      display: none;
    }
    .masthead.segment {
      min-height: 700px;
      padding: 1em 0em;
    }
    .masthead .logo.item img {
      margin-right: 1em;
    }
    .masthead .ui.menu .ui.button {
      margin-left: 0.5em;
    }
    .masthead h1.ui.header {
      margin-top: 3em;
      margin-bottom: 0em;
      font-size: 4em;
      font-weight: normal;
    }
    .masthead h2 {
      font-size: 1.7em;
      font-weight: normal;
    }
    .ui.vertical.stripe {
      padding: 8em 0em;
    }
    .ui.vertical.stripe h3 {
      font-size: 2em;
    }
    .ui.vertical.stripe .button + h3,
    .ui.vertical.stripe p + h3 {
      margin-top: 3em;
    }
    .ui.vertical.stripe .floated.image {
      clear: both;
    }
    .ui.vertical.stripe p {
      font-size: 1.33em;
    }
    .ui.vertical.stripe .horizontal.divider {
      margin: 3em 0em;
    }
    .quote.stripe.segment {
      padding: 0em;
    }
    .quote.stripe.segment .grid .column {
      padding-top: 5em;
      padding-bottom: 5em;
    }
    .footer.segment {
      padding: 5em 0em;
    }
    .secondary.pointing.menu .toc.item {
      display: none;
    }
    @media only screen and (max-width: 700px) {
      .ui.fixed.menu {
        display: none !important;
      }
      .secondary.pointing.menu .item,
      .secondary.pointing.menu .menu {
        display: none;
      }
      .secondary.pointing.menu .toc.item {
        display: block;
      }
      .masthead.segment {
        min-height: 350px;
      }
      .masthead h1.ui.header {
        font-size: 2em;
        margin-top: 1.5em;
      }
      .masthead h2 {
        margin-top: 0.5em;
        font-size: 1.5em;
      }
    }
